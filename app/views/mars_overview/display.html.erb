<h1>Mars overview Display</h1>

<div class="from">
  <%= form_with :url => {:action => :display}, :method => "get" do |form| %>
    <em><%= form.label "Select Year and Month:" %>></em>
    <%= form.select(:search_year, @years) %>
    <%= form.select(:search_month, @months) %>
    <%= form.submit("Run Again!") %>
  <% end %>
</div>

<table>
  <thead>
  <tr>
    <th>Day</th>
    <th>Month</th>
    <th>Year</th>
    <th>Solstice</th>
    <th>Mintemp</th>
    <th>Maxtemp</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @weatherdata.each do |weather| %>
    <tr>
      <td><%= weather.day %></td>
      <td><%= weather.month %></td>
      <td><%= weather.year %></td>
      <td><%= weather.solstice %></td>
      <td><%= weather.minTemp %></td>
      <td><%= weather.maxTemp %></td>
      <td><%= link_to 'Show', weather %></td>
    </tr>
  <% end %>
  </tbody>
</table>