<p id="notice"><%= notice %></p>

<h1>Weathers</h1>

<div class="from">
  <%= form_with :url => {:action => :index}, :method => "get" do |form| %>
  <em><%= form.label "Select Year and Month:" %>></em>
    <%= form.select(:search_year, @years) %>
    <%= form.select(:search_month, @months) %>
    <%= form.submit("Go!") %>
  <% end %>
</div>

<h1><b>Historical Weather Data</b></h1>
<table>
  <thead>
  <tr>
    <th>Day</th>
    <th>Month</th>
    <th>Year</th>
    <th>Solstice</th>
    <th>Mintemp</th>
    <th>Maxtemp</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @weathers.each do |weather| %>
    <tr>
      <td><%= weather.day %></td>
      <td><%= weather.month %></td>
      <td><%= weather.year %></td>
      <td><%= weather.solstice %></td>
      <td><%= weather.minTemp %></td>
      <td><%= weather.maxTemp %></td>
      <td><%= link_to 'Show', weather %></td>
      <td><%= link_to 'Edit', edit_weather_path(weather) %></td>
      <td><%= link_to 'Destroy', weather, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
