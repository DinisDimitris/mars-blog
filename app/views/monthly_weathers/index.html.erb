<p id="notice"><%= notice %></p>

<h1>Monthly Weathers</h1>

<table>
  <thead>
    <tr>
      <th>Month</th>
      <th>Mintemp</th>
      <th>Maxtemp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monthly_weathers.each do |monthly_weather| %>
      <tr>
        <td><%= monthly_weather.month %></td>
        <td><%= monthly_weather.minTemp %></td>
        <td><%= monthly_weather.maxTemp %></td>
        <td><%= link_to 'Show', monthly_weather, class: 'linkButton2'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<a href = '/monthly_weathers.json' target = '_blank' align = 'bottom'><div class="linkButton">See Json</div></a>